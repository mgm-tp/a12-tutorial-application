{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "client start",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "start" ],
            "cwd": "${workspaceFolder}/client"
        },
        {
            "type": "chrome",
            "name": "client start [debug]",
            "request": "launch",
            "url": "http://localhost:8081",
            "runtimeExecutable": "stable",
            "webRoot": "${workspaceFolder}/client",
            "preLaunchTask": "start client",
            "postDebugTask": "stop client",
            "sourceMaps": true
        },
        {
            "type": "java",
            "name": "server start (local-db)",
            "request": "launch",
            "mainClass": "com.mgmtp.a12.tutorial.server.TutorialServerApplication",
            "args": [
                "--spring.profiles.active=local-db-env"
            ],
            "cwd": "${workspaceFolder}/server/app",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "server start (h2-in-mem)",
            "request": "launch",
            "mainClass": "com.mgmtp.a12.tutorial.server.TutorialServerApplication",
            "args": [
                "--spring.profiles.active=dev-env"
            ],
            "cwd": "${workspaceFolder}/server/app",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "init app start (local-db)",
            "request": "launch",
            "mainClass": "com.mgmtp.a12.tutorial.server.init.ProjectTemplateInitApplication",
            "args": [
                "--spring.profiles.active=local-db-env"
            ],
            "cwd": "${workspaceFolder}/server/init",
            "projectName": "init"
        },
        {
            "type": "java",
            "name": "init app start (h2-in-mem)",
            "request": "launch",
            "mainClass": "com.mgmtp.a12.tutorial.server.init.ProjectTemplateInitApplication",
            "args": [
                "--spring.profiles.active=dev-env"
            ],
            "cwd": "${workspaceFolder}/server/init",
            "projectName": "init"
        }
    ]
}